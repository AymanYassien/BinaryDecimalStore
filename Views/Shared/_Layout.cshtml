@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    
  document.addEventListener('DOMContentLoaded', function() {
      // Handle currency selection
      const currencyLinks = document.querySelectorAll('[data-currency]');
      
      // Check if we're on a page with currency already changed (check URL parameters)
      const urlParams = new URLSearchParams(window.location.search);
      const currencyChanged = urlParams.get('currencyChanged');
      
      // Check localStorage and trigger currency change only if not already changed
      const savedCurrency = localStorage.getItem('selectedCurrency');
      if (savedCurrency && !currencyChanged) {
          const currencyMap = {
              'USD': 'Dollar',
              'SAR': 'KSA',
              'EGP': 'EGY'
          };
          const routeCurrency = currencyMap[savedCurrency];
          if (routeCurrency) {
              //window.location.href = `/customer/Home/ChangeCurrency?currency=${routeCurrency}`;
          }
      }
      
      // Save selection when user clicks a currency
      currencyLinks.forEach(link => {
          link.addEventListener('click', function() {
              const currency = this.getAttribute('data-currency');
              localStorage.setItem('selectedCurrency', currency);
          });
      });
  });
        
  
</script>