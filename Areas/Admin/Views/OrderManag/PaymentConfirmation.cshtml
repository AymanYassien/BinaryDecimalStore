@model int

<title>Payment Confirmation</title>

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfully!</h1>
        Order Number : @Model <br/><br/>
        <img src="~/images/nature.jpeg" width="40%" height="40%"  alt="Image" />
        <div class="col-12 text-center" style=" margin-top: 30px; color:maroon">
            <br/>
            Payment has been placed successfully! <br/>
            <a
                asp-area="Admin"
                asp-controller="OrderManag"
                asp-action="Details"
                asp-route-id="@Model" class="btn btn-primary">
                Back To Order Details
            </a>
        </div>
    </div>
    
    

</div>

@section Scripts{
    <script src="https://js.stripe.com/v3/"></script>
}
