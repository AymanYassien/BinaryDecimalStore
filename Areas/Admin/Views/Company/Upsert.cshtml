@model Company

<title>@(Model.ID == 0? "Create" : "Update") Company</title>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.ID == 0? "Create" : "Update") Company</h2>
            </div>
        </div>
    </div>
    
    <div class="card-body p-4 mb-3">
        <form method="post" class="row" enctype="multipart/form-data">
            <input type="hidden" asp-for="ID"  /> 
            <input type="hidden" asp-for="Imageurl"  /> 
            <div class="row">
                <div class="col-10">
                     <div class="border p-3 ">
                                    
                                    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                                    
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="Name" class="form-control border-0 shadow"/>
                                        <label asp-for="Name" class="ms-2"></label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="@Model.State" class="form-control border-0 shadow"/>
                                        <label asp-for="@Model.State" class="ms-2"></label>
                                        <span asp-validation-for="@Model.State" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="@Model.City" class="form-control border-0 shadow"/>
                                        <label asp-for="@Model.City" class="ms-2"></label>
                                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                                    </div>
                                    
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="@Model.Address" class="form-control border-0 shadow"/>
                                        <label asp-for="@Model.Address" class="ms-2"></label>
                                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="@Model.Code" class="form-control border-0 shadow"/>
                                        <label asp-for="@Model.Code" class="ms-2"></label>
                                        <span asp-validation-for="@Model.Code" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input asp-for="@Model.PhoneNumber" class="form-control border-0 shadow"/>
                                        <label asp-for="@Model.PhoneNumber" class="ms-2"></label>
                                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating py-2 col-12">
                                        <input  type="file" name="file" class="form-control border-0 shadow"/>
                                        <label asp-for="@Model.Imageurl" class="ms-2"></label>
                                        @* <span asp-validation-for="Product.Imageurl" class="text-danger"></span> *@
                                    </div>
                                    <div class="row pt-2">
                                        
                                        <div class="col-6 ">
                                            @if (Model.ID == 0)
                                            {
                                                <button type="submit" class="btn btn-primary form-control" style="width: 150px">Save</button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-primary form-control" style="width: 150px">Update</button>
                                            }
                                            
                                        </div>
                            
                                        <div class="col-6 ">
                                            <a asp-action="companies" asp-controller="Company" class="btn btn-outline-primary form-control border">Back to List</a>
                                        </div>
                                        
                                    </div>
                                    
                                </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Imageurl" width="100%" alt="Product Image"
                         style="border-radius: 5px; border: 1px solid #bbb9b9"/>
                </div>
            </div>
        
        </form>
    </div>
    
</div>



