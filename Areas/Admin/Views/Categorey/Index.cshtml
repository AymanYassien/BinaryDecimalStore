@model List<BinaryDecimalStore.Models.Categorey> 

@{
    Layout = "_Layout";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    
    <div class="card-body p-4">
      
      <div class="row pb-3">
        
        <div class="col-12 text-end" >
                    <a asp-controller="Categorey" asp-action="addNewCategory" class="btn btn-primary">
                      <i class="bi bi-plus-square"></i>&nbsp; New Category
                    </a>
                  </div>
        </div>
      <table class="table table-bordered table-striped ">
        <thead >
        <tr>
          <th >Name</th>
          <th >Description</th>
          <th >Display Order</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        @if (Model !=null )
        {
            @foreach (var c in Model.OrderBy(c => c.DisplayOrder))
            {
                <tr>
                    <td>@c.name</td>
                    <td>@c.Description</td>
                    <td>@c.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Categorey" asp-action="EditCategory" asp-route-ID="@c.ID" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Categorey" asp-action="DeleteCategory" asp-route-ID="@c.ID" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill "></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
          <td>Null</td>
          <td>Null</td>
          <td>Null</td>
          <td>Null</td>
        }
        
        
        </tbody>
      </table>
      
    </div>
      
    </div>






@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}  



